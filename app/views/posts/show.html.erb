<div class="container-fluid">
  <p style="position: absolute;"><%= @post.created_at.strftime("Created at %m/%d/%Y ") %></p>
  <div class="jumbotron">
  <h1 class="text-center"><%=@post.title%></h1>
  <div class="posts_photo d-flex justify-content-start">
  <% @post.avatars.each do  |image| %>
   <%= image_tag image.url, class:"img-fluid  img-thumbnail"%>
  <% end %>
    </div>
  <p class="text_on_post"><%=@post.content%></p>
  <p><small>Tags: <%= raw @post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small></p>
</div>
</div>
