<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username,class:"form-control", maxlength:"30" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>
  <label class="btn btn-info">
    Add photo
    <span style="display:none;">
    <%= f.file_field :avatar %>
    </span>
  </label>
  <div class="field form-group">
    <%= f.label :about %><br />
    <%= f.text_area :about,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :birthday %><br />
    <%= f.date_field :birthday,class:"form-control", max: Date.today %>
  </div>
  <div class="field form-group">
    <%= f.label :private %><i>(Set private or public profile)</i><br />
    <%= f.check_box :privat %>
  </div>
  <div class="field form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>

  </div>
<% end %>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

