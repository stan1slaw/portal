
<p><%= t('information.username') %>: <%= current_user.username %></p>
<p><%= t('information.status') %>:
  <% if current_user.try(:admin?) %>
    <span> <%= t('information.admin') %></span>
  <% else %>
    <span><%= t('information.user') %></span>
    <% end %>
    </p>

<p ><% if current_user.avatar.url.nil? %>
    <%= image_tag current_user.avatar = "https://cdn.iconscout.com/icon/premium/png-256-thumb/human-user-profile-man-face-avatar-51412.png", class:"main_photo_url"  %>
  <% else %>
    <%= image_tag current_user.avatar.url, class:"main_photo_url"  %>
  <% end %></p>
<p><%= t('information.about') %>: <%= current_user.about %></p>
<p><%= t('information.email') %>: <%= current_user.email %></p>
<p><%= t('information.firstname') %>: <%= current_user.first_name %></p>
<p><%= t('information.lastname') %>: <%= current_user.last_name %></p>
<p><%= t('information.birthday') %>: <%= current_user.birthday %></p>

